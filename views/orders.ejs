<html ng-app="mainModule">
    <head>
        <%- include('partial/imports')%>
        <link href="/resources/css/orders.css" rel="stylesheet">
    </head>

    <body class="ng-cloak">
        <div class="container">
            <div ng-controller="adminController">
                <h1>Welcome to admin page</h1>
                <button ng-click="logoutBtn()">logout</button>
                <div class="well row" ng-repeat="order in orders">
                    <div class="col-md-5">
                        <label>{{ order.user.first_name + " " + order.user.last_name }}</label><br>
                        <label>{{ order.user.phone_number }}</label><br>
                        <label>{{ order.user.email }}</label><br>
                        <label>{{ order.delivery_address }}</label><br>
                        <label>{{ order.store_address }}</label><br>
                    </div>

                    <div class="col-md-5" style="max-height: 150px; overflow-y:scroll;">
                        <div ng-repeat="cart in order.cart">
                            <label>{{ cart.brand }} {{ cart.name }} - {{cart.packaging}} (x{{ cart.quantity }}): {{ cart.price }}$</label><br>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <label>Order# {{ order.order_id }}</label><br>
                        <label>Total: {{ order.cart | totalPrice }}$</label><br>
                    </div>
                </div>
            </div>
        </div>
        <script src="/resources/controllers/orders.js"></script>
    </body>
</html>