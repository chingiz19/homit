<link href="/resources/css/checkout_menu.css" rel="stylesheet">
<div ng-controller="cartController">
    <div class="cart1 pull-right">
        <md-button id="cart" ng-click="toggleRight()" ng-hide="isOpenRight()" class="md-fab md-primary cart2a" aria-label="toggleRightCart">
            <div class="cart2aa"><ng-md-icon icon="shopping_cart" class="shopping-cart" style="fill:rgba(0,94,92,0.8);" size="38"></div>
        </md-button>
        <div class="cartNotificationNumber cart2b">{{numberOfItemsInCart}}</div>
    </div>
    <md-sidenav class="md-sidenav-right md-whiteframe-4dp mdSideNavR1" md-component-id="right"> 
        <md-content class="mdSideNavR2">
            <div class="sdNavFB1">
                <div class="sdNavFB2">
                    <md-button ng-click="close()" aria-label="HideSideNav" class="ClsBtn" >
                        <span class="glyphicon glyphicon-chevron-left glyClsBtnSgn"></span>
                        <img class="ClsBtnCart" ng-src="{{'/resources/images/cart_Icon.svg'}}"/>
                    </md-button>
                    <md-button onclick="location.href='/checkout'" class="md-primary chckOut" >Check Out</md-button>
                </div>
                <div layout="row" layout-align="center">
                    <div class="sdNavFB3">
                        <ul class="sdNavFB3a">
                            <li>Cart Total:</li>
                        </ul>
                    </div>
                    <div class="sdNavFB3">
                        <ul class="sdNavFB3b">
                            <li>C${{totalAmount}}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Order Summary - Cart Items-->
            <div ng-repeat="product in userCart" class="cartBItems1">
                <div layout="row" layout-align="center">
                    <div class="cartBItems2A" flex="30">
                        <ul>
                            <li>
                                <md-button aria-label="plusItem" ng-click="plusItem(product)" class="plusItem">
                                    <img class="orBtnSz" ng-src="{{'/resources/images/plusItem_Icon.svg'}}">
                                </md-button>
                            </li>
                            <li>
                                <md-button  aria-label="minusItem" ng-click="minusItem(product)" class="minusItem">
                                    <img class="orBtnSz" ng-src="{{'/resources/images/minusItem_Icon.svg'}}">
                                </md-button>
                            </li>
                        </ul>
                    </div>
                    <div flex="35" layout="column" >
                        <li class="cartBItems2B1">
                            <md-button aria-label="removeFromCart" ng-click="removeFromCart(product)" class="itemRemoveBtn1">
                                <img class="itemRemoveBtn2" ng-src="{{'/resources/images/clearItem_Icon.svg'}}">
                            </md-button>
                        </li>
                        <li><img class="cartBItems2B2" ng-src={{product.image}}></li>
                    </div>
                    <div class="cartBItems2C" flex="35">
                        <ul class="cartBItems2C2">
                            <li>{{product.brand}} {{product.name}}</li>
                            <li>X{{product.packaging}}</li>
                            <li>{{product.volume}}</li>
                            <li>{{product.price}}C$</li>
                            <li>#{{product.quantity}}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clrCart">
                <md-button class="md-raised clrCartbtn"  ng-click="clearCart()"> Clear Cart </md-button>
            </div>
        </md-content>
    </md-sidenav>
</div>
<script src="/resources/controllers/checkout_menu.js"></script>