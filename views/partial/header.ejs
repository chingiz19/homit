<!-- Modal for log in/sign up -->
<div id='loginModal' class="modal fade" tabindex="-1" role="dialog" ng-controller="LoginController as login">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h3>{{login.modalTitle}}</h3>
        </div>
        
        <div class="modal-body">
            <div ng-show="login.error">Couldn't find account assocciated to email below. Would you 
                like to <button ng-click='login.goToSignUpForm'>sign up?</button></div>
            <form>
                <div class="form-group">
                    <input name="email" ng-model="login.email" class="form-control" ng-disabled="login.goToSignUp || login.goToSignIn"placeholder="Email"/>
                </div>

                <!-- Sign in form -->
                <div name="signInForm" class="form-group" ng-if="login.goToSignIn">
                    <input name="password" ng-model="login.password" class="form-control" placeholder="Password"/>  
                </div>

                <!-- Sign up form -->
                <div name="signUpForm" ng-if="login.goToSignUp">
                    <div class="form-group">
                        <input name="firstname" ng-model="login.fname" class="form-control" placeholder="First name"/>  
                    </div>
                    <div class="form-group">
                        <input name="firstname" ng-model="login.lname" class="form-control" placeholder="Last name"/>  
                    </div>
                    <div class="form-group">
                        <input name="phone" ng-model="login.phone" class="form-control" placeholder="Phone"/>
                    </div>
                    <div class="form-group">
                        <input name="newPassword" ng-model="login.npassword" class="form-control" placeholder="Password"/>    
                    </div>
                    <div class="form-group">
                        <input name="confirmPassword" ng-model="login.cpassword" class="form-control" placeholder="Confirm password"/>    
                    </div>
                </div>
                <button class="btn btn-success full-width" ng-click="login.checkStage();">{{login.mainButtonText}}</button>
            </form>


        </div>

        <div class="modal-footer">
            <button class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>


