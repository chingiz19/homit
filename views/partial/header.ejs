<title> <%= title %> </title>

<link href="/resources/css/header.css" rel="stylesheet">
<link href="/resources/css/generic.css" rel="stylesheet">
<nav layout="column" ng-controller="NavigationController" class="navCont" ng-cloak>
    <md-toolbar class="homit-header-bigscreen fixed-header">
        <div class="md-toolbar-tools header">
            <div class="header-icon"><a class="mVerHedL2a1" href="/main" target="_self"><img ng-src="{{'/resources/images/Homit_Logo.jpeg'}}" width="47px;" height="75%"/></a></div>
            <div class="mnSrch">
                <md-button aria-label="searchOrClear" class="mnSrchB">
                    <ng-md-icon ng-if="!searchedItem" icon="search" class="header-search-icon" size="25"></ng-md-icon>
                    <ng-md-icon ng-if="searchedItem" icon="clear" class="header-search-icon" size="25"></ng-md-icon>
                </md-button>
                <md-input-container class="mnSrchA">
                    <label class="mnSrchAA">
                    </label>
                    <input ng-model="searchedItem" placeholder="Search to Homit...">
                </md-input-container>
            </div>
            <div style="display: flex; justify-content: flex-end;">
                <md-button aria-label="header-dashboard" ng-click="storeHub = !storeHub" ng-class="{'button-press-feel': storeHub}">
                    <ng-md-icon icon="dashboard" class="header-icon" size="45"></ng-md-icon>
                </md-button>
                <md-button ng-if="!<%=isSignedIn%>" aria-label="header-sign" class="header-icon" data-toggle="modal" data-target="#loginModal">
                    <ng-md-icon  icon="person_outline" class="header-icon" size="48"></ng-md-icon>
                </md-button>
                <md-button ng-if="<%=isSignedIn%>" aria-label="userDropDown" ng-class="{'button-press-feel': userDropDown}" ng-click="showHideUserDropdown()">
                    <ng-md-icon icon="person" class="header-icon" size="45"></ng-md-icon>
                </md-button>
                <div ng-show="userDropDown">
                    <ul layout="column" class="infoDrDwnA">  
                        <li class="infoDrDwnAA"><a href="/myaccount" target="_self" class="infoDrDwnAAA"><ng-md-icon icon="settings" size="20"></ng-md-icon>&#8198<%= username %></a></li>
                        <li class="infoDrDwnAB"><a href="#" target="_self" class="infoDrDwnAAA" ng-click="logout()"><ng-md-icon icon="logout" size="20"></ng-md-icon>&#8198Sign Out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </md-toolbar>
    <!-- For small screens -->
    <md-toolbar class="homit-header-smallscreen fixed-header">
        <div class="md-toolbar-tools header">
            <md-button  class="header-icon">
                <ng-md-icon aria-label="clearHeaderSearch" icon="search" class="header-icon" size="95"></ng-md-icon>
            </md-button>
            <md-button aria-label="header-Logo" class="header-icon" style="left: 6%;">
                <a href="/main" target="_self">
                    <img ng-src="{{'/resources/images/Homit_Logo.jpeg'}}" width="100" height="100"/>
                </a>
            </md-button>
            <div style="display: flex; justify-content: flex-end;">
                <md-button aria-label="header-sign" class="header-icon" style="display: flex; margin-right: auto;" ng-click="storeHub = !storeHub" ng-class="{'button-press-feel': storeHub}">
                    <ng-md-icon icon="dashboard" class="header-icon" size="92"></ng-md-icon>
                </md-button>
                <md-button ng-if="!<%=isSignedIn%>" aria-label="header-sign" class="header-icon" data-toggle="modal" data-target="#loginModal">
                    <ng-md-icon  icon="person_outline" class="header-icon" size="95"></ng-md-icon>
                </md-button>
                <md-button ng-if="<%=isSignedIn%>" aria-label="userDropDown" ng-class="{'button-press-feel': userDropDown}" ng-click="showHideUserDropdown()">
                    <ng-md-icon icon="person" class="header-icon" size="95"></ng-md-icon>
                </md-button>
                <div ng-show="userDropDown">
                    <ul layout="column" class="infoDrDwnA">  
                        <li class="infoDrDwnAA"><a href="/myaccount" target="_self" class="infoDrDwnAAA"><ng-md-icon icon="settings" size="35"></ng-md-icon>&#8198<%= username %></a></li>
                        <li class="infoDrDwnAB"><a href="#" target="_self" class="infoDrDwnAAA" ng-click="logout()"><ng-md-icon icon="logout" size="35"></ng-md-icon>&#8198Sign Out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </md-toolbar>
    <!-- Dashboard -->
    <div ng-show="storeHub" class="storeHub">
        <div class="storeHubA">
            <ul class="storeHubAA">
                <li flex="45" class="storeHubAAA" ng-click="hrefTo('/catalog/snacks')">
                    <div class="storeHubAAAA">
                        <ng-md-icon icon="panorama_vertical" class="storeHubAAAAA" size="48">
                    </div>
                    <label class="storeHubAAAAB">Snack Vendor</label>
                </li>
                <li flex="45" class="storeHubAAA" class="text-center" ng-click="hrefTo('/catalog/liquor')">
                    <div class="storeHubAAAA">
                        <ng-md-icon icon="local_gas_station" class="storeHubAAAAA" size="48">
                    </div>
                    <label class="storeHubAAAAB">Liqour</label>
                </li>
            </ul>
        </div>
    </div>
</nav>

<%- include('signup')%>

<script src="/resources/controllers/header.js"></script>
<script>
    $(document).ready(function(){
        if ("#<%=tabId%>" != "#"){
            $("#<%=tabId%>").addClass("active");
        }

        $(window).resize(function(){
            var navHeight = $(".navbar").height();
            $(document.body).css("margin-top", navHeight);
        });

        $(window).resize();
    });
</script>





            