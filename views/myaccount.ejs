<html ng-app="mainModule">
<head>
    <%- include('partial/header', {title: title}); %>
</head>
<body>
    <div ng-controller="myaccountController">
        <br><br><br><br><br>
        <!-- toolbar part -->
        <div class="col-md-4">
            <div class="well well-lg">
                <ul class="nav nav-pills nav-stacked">
                <li><a href="#infoSection" data-toggle="tab">Info</a></li>
                <li><a href="#passwordSection" data-toggle="tab">Change password</a></li>
                <li class="pull-right"><a href="/main"><strong>Log out</strong></a></li>
                </ul>
            </div>
        </div>

        <!-- main part -->
        <div class="col-md-8">
            <div class="well well-lg">
                <div class="tab-content">
                    <div id="welcomeTab" class="tab-pane active text-center">
                        <h2>Welcome, developer(fname)</h2>
                    </div>
                    <div id="passwordSection" class="tab-pane text-center" style="padding: 30px;">
                        <form>
                            <div class="form-group">
                                <input class="form-control" placeholder="current password">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="new password">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="confirm password">
                            </div>
                            <button class="btn btn-primary pull-right disabled">Change</button>
                        </form>
                    </div>

                    <div id="infoSection" class="tab-pane" style="padding: 30px;">
                        <form>
                            <input class="form-control" placeholder="First name"><br>
                            <input class="form-control" placeholder="Last name"><br>
                            <button class="btn btn-primary pull-right disabled">Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/resources/controllers/myaccount.js"></script>
</body>
</html>
