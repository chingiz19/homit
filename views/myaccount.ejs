<html ng-app="mainModule">

<head ng-cloak>
    <%- include('partial/imports')%>
    <%- include('partial/header', {title: title}); %>
            <link href="/resources/css/myaccount.css" rel="stylesheet">
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbxP17w7jZr5QNnLQUmCJ8X3h1kl4EtFs&libraries=places"></script>
</head>

<body class="flex-row flex-space-between flex-100 container" ng-controller="myaccountController" ng-cloak>
    
    <!-- Sidebar -->
    <aside class="sidebar-default">
        <ul class="vertical-lists">
            <li class="close-button" ng-click="closeSidebar();"><span>Close</span></li>
            <li ng-class="{'selected': section == 0}" ng-click="selectSection(0)">Profile</li>
            <li ng-class="{'selected': section == 1}" ng-click="selectSection(1)">Delivery Address </li>            
            <li ng-class="{'selected': section == 2}" ng-click="selectSection(2)">Payment methods </li>
            <li ng-class="{'selected': section == 3}" ng-click="selectSection(3)">Security Settings </li>
            <span class="divider"></span>
            <li ng-class="{'selected': section == 4}" ng-click="selectSection(4)">Orders</li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main>
        <input id="stripeToken" value="<%= stripeToken %>" hidden>

        <!-- Profile -->
        <section ng-show="section == 0">
            <div class="flex-row flex-100 section-header">
                <span class="burger-menu" ng-click="openSidebar()">Menu</span>
                <h1>Profile</h1>
            </div>
            
            <span class="divider" style="width:100%"></span>

            <button class="configButton" ng-show="!editEnabled" ng-click="editEnabled = true">Edit</button>

            <div class="flex-column flex-100">
                <span class="flex-centered">
                    <form name="profile" ng-submit="updateProfile(profile.$valid)">
                        <md-input-container class="md-block container-margin" flex="100">
                            <label>First Name</label>
                            <input name="fname" maxlength="30" ng-pattern="/^[a-zA-Z]*$/" ng-disabled="!editEnabled" ng-model="fname" type="text" required/>
                            <div ng-messages="profile.fname.$error">
                                <div ng-message="pattern">Letters only</div>
                                <div ng-message="required">Required</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block container-margin" flex="100">
                            <label>Last Name</label>
                            <input name="lname" maxlength="30" ng-pattern="/^[a-zA-Z]*$/" ng-disabled="!editEnabled" ng-model="lname" type="text" required/>
                            <div ng-messages="profile.lname.$error">
                                <div ng-message="pattern">Letters only</div>
                                <div ng-message="required">Required</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block container-margin" flex="100">
                            <label>Date of Birth MM-DD-YYYY</label>
                            <input id ="date_of_birth" name="dob" ng-pattern="dobPattern" ng-disabled="!editEnabled" ng-model="dob" ng-blur="checkDOB()" required/>
                            <div ng-messages="profile.dob.$error" ng-messages-multiple>
                                <div ng-message="pattern">Date format only</div>
                                <div ng-message="required">Required</div>
                            </div>
                            <div ng-if="userInfo.dob_not_valid" class="error-message">Not legal age</div>
                        </md-input-container>
                        <md-input-container class="md-block container-margin" flex="100">
                            <label>Email</label>
                            <input name="email" ng-pattern="/^.+@.+\..+$/" ng-disabled="!editEnabled" ng-model="email" type="email" required/>
                            <div ng-messages="profile.email.$error">
                                <div ng-message="pattern">Email format only</div>
                                <div ng-message="required">Required</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block container-margin" flex="100">
                            <label>Phone</label>
                            <input id="phone-number" name="phone" minlength="5" maxlength="14" ng-pattern="/^[0-9()+ -]*$/" ng-disabled="!editEnabled" ng-model="phone" required/>
                            <div ng-messages="checkoutInput.phone.$error">
                                <div ng-message="pattern">Numbers only</div>
                                <div ng-message="minlength">Required</div>
                            </div>
                        </md-input-container>
                        <button ng-show="editEnabled" flex="100" type="submit">Update</button>
                    </form>
                    <button ng-show="editEnabled" ng-click="resetProfileSection();">Cancel</button>                     
                </span>
            </div>
        </section>
    
        <!-- Delivery Address -->
        <section ng-show="section == 1">
            <div class="flex-row flex-100 section-header">
                <span class="burger-menu" ng-click="openSidebar()">Menu</span>
                <h1>Delivery Address</h1>                   
            </div>

            <span class="divider" style="width:100%"></span>

            <button class="configButton" ng-show="!editEnabled" ng-click="editEnabled = true">Edit</button>
            <div class="flex-column flex-100">
                <span class="flex-centered">
                    <md-input-container class="md-block container-margin" ng-disabled="!editEnabled" flex="100">
                        <label style="display: none"></label>
                        <address-autocomplete input-class="address-input" icon-class="address-icon" button-class="address-input-btn" autocomplete="autocomplete"
                            on-address-selected="gotAddressResults" input-disabled="!editEnabled" autocomplete-bounds="bounds"></address-autocomplete>
                        <div ng-messages="checkoutInput.address.$error">
                            <div ng-message="required" class="inptErMsg">Required</div>
                        </div>
                        <div ng-if="withinCoverage == false" class="outPlgn_txt">Sorry, we do not deliver to your location at the moment</div>
                    </md-input-container>
                    <button ng-show="editEnabled" ng-click="updateDeliveryAddress(withinCoverage)">Update</button>
                    <button ng-show="editEnabled" ng-click="resetDeliveryAddressSection();">Cancel</button>
                </span>
            </div>
        </section>

        <!-- Payment Methods -->
        <section ng-show="section == 2">
            <div class="flex-row flex-100 section-header">
                <span class="burger-menu" ng-click="openSidebar()">Menu</span>
                <h1>Payment method</h1>                              
            </div>

            <span class="divider" style="width:100%"></span>
            
            <button class="configButton" ng-show="!editEnabled" ng-click="editEnabled = true">Edit</button>

            <div class="flex-column flex-100">
                <span class="flex-centered">
                    <!-- If edit card -->
                    <form name="payment_method" ng-submit="updatePaymentMethod(payment_method.$valid)" ng-show="editEnabled">
                        <div style="display: flex; flex-direction: row;">
                            <md-input-container class="md-block container-margin" flex="50">
                                <label>Name</label>
                                <input name="fname" maxlength="30" ng-pattern="/^[a-zA-Z]*$/" ng-disabled="!editEnabled" ng-model="card_name" type="text" ng-required="" />
                                <div ng-messages="profile.fname.$error">
                                    <div ng-message="pattern">Letters only</div>
                                    <div ng-message="required">Required</div>
                                </div>
                            </md-input-container>
                        </div>
                        <md-input-container class="md-block container-margin" flex="100">
                            <!-- <label>Card</label> -->
                            <div id="card"></div>
                        </md-input-container>
                        <button type="submit" ng-show="editEnabled">Update</button>                        
                    </form>

                    <!-- Only show, no edit -->
                    <div ng-show="!editEnabled">
                        <!-- If no card information exists -->
                        <div ng-show="!card">
                            No payment information. Click edit to add one
                        </div>

                        <!-- If card information exists -->
                        <div ng-show="card">
                            <label ng-show="card">{{ card.type + ': ' + '**** **** **** ' + card.last4 + ' (' + card.exp + ')' }}</label>
                        </div>
                    </div>
                    <button ng-show="editEnabled" ng-click="resetPaymentMethodsSection();">Cancel</button>
                </span>
            </div>
        </section>

        <!-- Security Settings -->
        <section ng-show="section == 3">
            <div class="flex-row flex-100 section-header">
                <span class="burger-menu" ng-click="openSidebar()">Menu</span>
                <h1>Security Settings</h1>                
            </div>

            <span class="divider" style="width:100%"></span>

            <button class="configButton" ng-show="!editEnabled" ng-click="editEnabled = true">Edit</button>

            <div class="flex-column flex-100">
                    <span class="flex-centered">
                        <!-- <input ng-model="old_pass" placeholder="old pass" ng-disabled="!editEnabled">
                        <input ng-model="new_pass" placeholder="new pass" ng-disabled="!editEnabled">
                        <input ng-model="confirm_pass" placeholder="confirm pass" ng-disabled="!editEnabled"> -->

                        <form name="security_set" ng-submit="updateSecuritySettings(security_set.$valid)">
                            <md-input-container class="md-block container-margin" flex="100">
                                <label>Old Password</label>
                                <input id="current_pass" name="current_pass" ng-pattern="/^(?:([^\?\$\{\}\^\(\)\!\'\[\<\ \>\,\+\”\/\;\\\|\%\&\#\@]))*$/" ng-model="current_pass" ng-disabled="!editEnabled"/>
                                <div ng-messages="security_set.current_pass.$error">
                                    <div ng-message="pattern">Invalid Characters</div>
                                    <div ng-message="minlength">Required</div>
                                </div>
                            </md-input-container>
                            <md-input-container class="md-block container-margin" flex="100">
                                <label>New Password</label>
                                <input id="new_pass" name="new_pass" ng-pattern="/^(?:([^\?\$\{\}\^\(\)\!\'\[\<\ \>\,\+\”\/\;\\\|\%\&\#\@]))*$/" ng-disabled="!editEnabled" ng-model="new_pass" ng-required="old_pass"/>
                                <div ng-messages="security_set.new_pass.$error">
                                    <div ng-message="pattern">Invalid Characters</div>
                                    <div ng-message="minlength">Required</div>
                                </div>
                            </md-input-container>
                            <md-input-container class="md-block container-margin" flex="100">
                                <label>Confirm Password</label>
                                <input id="confirm_pass" name="confirm_pass" ng-pattern="/^(?:([^\?\$\{\}\^\(\)\!\'\[\<\ \>\,\+\”\/\;\\\|\%\&\#\@]))*$/" ng-disabled="!editEnabled" ng-model="confirm_pass" ng-required="old_pass"/>
                                <div ng-messages="security_set.confirm_pass.$error">
                                    <div ng-message="pattern">Invalid Characters</div>
                                    <div ng-message="minlength">Required</div>
                                </div>
                            </md-input-container>
                            <button type="submit" ng-show="editEnabled">Update</button>
                        </form>
                        <button ng-show="editEnabled" ng-click="resetSecuritySettingsSection();">Cancel</button>
                    </span>
                </div>
        </section>

        <!-- Orders -->
        <section ng-show="section == 4">
            <div class="flex-row flex-100 section-header">
                <span class="burger-menu" ng-click="openSidebar()">Menu</span>
                <h1>Orders</h1>                
            </div>

            <span class="divider" style="width:100%"></span>

            <div class="flex-column flex-100">
                <div ng-show="!orders">No Orders</div>
                <div ng-show="orders"></div>
            </div>
        </section>
    </main>



    <% if (!production) { %>
        <script src="/resources/directives/addressAutocomplete.js"></script>
        <script src="/resources/services/sessionStorage.js"></script>
        <script src="/resources/services/date.js"></script>
        <script src="/resources/services/mapServices.js"></script>
        <script src="/resources/controllers/myaccount.js"></script>        
    <% } %>
</body>

</html>