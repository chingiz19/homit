<html ng-app="mainModule">

<head>
    <%- include('partial/imports')%>
        <%- include('partial/header', {title: title}); %>
            <link href="/resources/css/contact_us.css" rel="stylesheet">
            <meta property="og:title" content="Homit" />
            <meta property="og:type" content="website" />
            <meta property="og:url" content="https://www.homit.ca" />
            <meta property="og:description" content="Ever craved late night munches, or forgot to stock your bar before party, or simply didn't have time to grab necessities... Let
                us 'Home It' for you and liberate your precious time. Place order online and watch for us to appear at your door, shortly after."
            />
            <meta property="og:image" content="https://www.homit.ca/resources/images/Circle%20H%20blue.jpeg" />
</head>

<body ng-cloak>
    <div class="container">
        <div class="col-md-8 col-md-offset-2 content">
            <section itemscope itemtype="http://schema.org/ContactPage">
                <h1 class="top-header top-header-contact" itemprop="name">Question or Feedback?</h1>
                <article class="contact-top-subhead" itemprop="description">
                    Help us to Homit better.
                </article>
                <article layout="row" class="contact-info-box">
                    <div layout="column" class="icon-box">
                        <ng-md-icon class="email-icon icon" icon="email"></ng-md-icon>
                        <ng-md-icon class="icon" icon="local_phone"></ng-md-icon>
                    </div>
                    <div layout="column">
                        <a class="email" href="mailto:info@homit.ca" itemprop="email">info@homit.ca</a>
                        <div class="phone" itemprop="telephone">+1(403) 800-3460</div>
                    </div>
                </article>
            </section>
        </div>
    </div>
</body>
<footer>
    <%- include('partial/footer')%>
</footer>

</html>