<html ng-app="mainModule">

<head>
    <%- include('partial/imports')%>
        <%- include('partial/header', {title: title}); %>
            <style>
                body {
                    font-family: 'Nunito', sans-serif;
                    letter-spacing: 0.01em;
                    background-color: rgb(252, 252, 252);
                }

                .content-div {
                    position: relative;
                    top: 55px;
                    width: 100vw;
                    height: calc(100vh - 200px);
                    padding-top: 5%;
                    display: flex;
                    align-content: center;
                    flex-direction: column;
                }

                .icon-div {
                    width: 100%;
                    display: flex;
                    justify-content: center;
                }

                .icon-div .success {
                    fill: #6AB5B1;
                }

                .icon-div .error {
                    fill: rgb(194, 83, 83);
                    ;
                }

                .icon-div ng-md-icon {
                    filter: drop-shadow(0 0px 2px rgba(0, 0, 0, 0.4));
                }

                .content-div h1 {
                    display: center;
                    flex-direction: column;
                    text-align: center;
                }

                .message-p {
                    width: 50%;
                    text-align: center;
                    font-size: 20px;
                    margin: 20px auto;
                }

                .message-p a {
                    color: #337ab7;
                    transition: color 0.4s ease;
                }

                .message-p a ng-md-icon {
                    fill: #337ab7;
                    margin-right: 1px;
                    transition: fill 0.4s ease;
                }

                .message-p a:hover {
                    color: #11283b;
                    text-decoration: none;
                }

                .message-p a:hover ng-md-icon {
                    fill: #11283b;
                }

                /* start of phone styles */

                @media screen and (max-device-width: 479px) {
                    .message-p {
                        width: 90%;
                    }
                    .message-p a {
                        height: 50px;
                    }
                    .message-p a:hover {
                        color: #337ab7;
                        text-decoration: none;
                    }

                    .message-p a:hover ng-md-icon {
                        fill: #337ab7;
                    }
                }
            </style>
</head>

<body ng-app="" ng-init="showError = (<%= error %>)">
    <div class="content-div fadeIn" ng-cloak>
        <div class="icon-div">
            <ng-md-icon ng-show="!showError" class="success" icon="lock_outline" size="130"></ng-md-icon>
            <ng-md-icon ng-show="showError" class="error" icon="sentiment_neutral" size="130"></ng-md-icon>
        </div>
        <h1>Hi
            <%= userName %>,</h1>
        <p class="message-p">
            <%- displayMessage %>
                <a ng-show="!showError" href="/main" target="_self" class="box-center">
                    <ng-md-icon icon="arrow_forward" size="18"></ng-md-icon>Store Hub</a>
        </p>
    </div>
    <% if (!production) { %>
        <script src="/resources/services/localStorage.js"></script>
        <% } %>
</body>

<footer>
    <%- include('partial/footer')%>
</footer>

</html>